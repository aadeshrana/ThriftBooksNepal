<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textAlignment="center"
    android:text="REJECTED!"
    android:textSize="18sp"
    android:textColor="@android:color/holo_red_dark"
    android:id="@+id/rejectedTextView"
    />
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/successTv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@id/rejectedTextView"
        android:background="#FFBB88FF"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/declinedOffersMessageText"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/declinedOffersExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/successTv1"
        android:background="#FFBB88FF"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="DISIMISS"
                android:textColor="#0000EE" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>