<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/adapterFirstPageCardViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="5dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pixCV"
                android:layout_width="90dp"
                android:layout_height="110dp"
                app:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="#EEE"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp"

                >
                <ImageView
                    android:id="@+id/imageOfBookForALevelBuyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </android.support.v7.widget.CardView>

            <TextView
                android:textColor="#000000"
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pixCV"
                android:layout_toEndOf="@id/pixCV"
                android:text="Title:"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:textAppearanceSmall"
                />

            <TextView
                android:textColor="#000000"
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pixCV"
                android:layout_toEndOf="@id/pixCV"
                android:text="Seller:"
                android:layout_below="@+id/title1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:textAppearanceSmall"
                />

            <TextView
                android:id="@+id/titleOfBookForALevelBuyer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Title of Book"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textColor="#000000"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_below="@+id/title1"
                android:layout_alignBaseline="@+id/title1"
                android:layout_toRightOf="@+id/title2"
                android:layout_toEndOf="@+id/title2" />

            <TextView
                android:id="@+id/nameOfSellerForBuyerCustomALevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sellers name:"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#000000"
                android:layout_alignBaseline="@+id/title2"
                android:layout_alignBottom="@+id/title2"
                android:layout_alignLeft="@+id/titleOfBookForALevelBuyer"
                android:layout_alignStart="@+id/titleOfBookForALevelBuyer" />

            <TextView
                android:id="@+id/rsTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textAppearance="?android:textAppearanceSmall"

                android:textColor="#000000"

                android:layout_alignBaseline="@+id/title3"
                android:layout_alignBottom="@+id/title3"
                android:layout_alignLeft="@+id/nameOfSellerForBuyerCustomALevel"
                android:layout_alignStart="@+id/nameOfSellerForBuyerCustomALevel" />

            <TextView
                android:id="@+id/priceOfBookForALevelBuyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_alignBaseline="@+id/rsTextId"
                android:layout_alignBottom="@+id/rsTextId"
             android:layout_toRightOf="@+id/rsTextId" />

            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_below="@+id/title2"
                android:layout_alignLeft="@+id/title2"
                android:layout_alignStart="@+id/title2" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>