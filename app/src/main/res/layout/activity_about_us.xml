<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#EEE"
    >
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardviewmain1"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardElevation="1dp"

                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="2dp"
                android:layout_marginBottom="4dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ABOUT APP"
                        android:id="@+id/textView1"

                        android:layout_alignParentLeft="true"

                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="This android application was developed as per the Major project of BSc-It, allowing users to buy and resell their books easily"
                        android:id="@+id/textView2"
                        android:layout_below="@+id/textView1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        />





                    <TextView
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ABOUT DEVELOPERS"
                        android:id="@+id/textView6"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Aadesh Rana"
                        android:id="@+id/textView7"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/textView6"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="linkedin.com/in/aadesh-rana-581708110"
                        android:id="@+id/textView8"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView7"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="3dp"
                        />

                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="aadesh_rana@hotmail.com"
                        android:id="@+id/textView9"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView8"
                        android:layout_alignParentLeft="true" />
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="+91 8527647059"
                        android:id="@+id/textView10"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView9"
                        android:layout_alignParentLeft="true" />


                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Gaurav Jayasawal"
                        android:textStyle="bold"
                        android:id="@+id/textView11"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView10"
                        android:layout_alignParentLeft="true"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="linkedin.com/in/gaurav-jayasawal-7a85a8135"
                        android:id="@+id/textView12"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView11"
                        android:layout_alignParentLeft="true" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="jgaurav6@gmail.com"
                        android:id="@+id/textView13"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView12"
                        android:layout_alignParentLeft="true" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="+91 9971847753"
                        android:id="@+id/textView14"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView13"
                        android:layout_alignParentLeft="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardviewmain"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardElevation="1dp"
                android:layout_margin="4dp"
                android:layout_below="@id/cardviewmain1"

                android:padding="2dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/contactUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Sansar- CONTACT US"
                        android:textColor="#000000"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contactUs"
                        android:text="If you have any questions, feel free to send us a message using the form below. We will contact you as soon as possible"
                        android:layout_marginTop="5dp"
                        android:id="@+id/cardviewSecond" />

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardBackgroundColor="#FF5C6B72"
                        android:layout_below="@id/cardviewSecond"
                        android:id="@+id/CUCardView"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp">
                        <EditText
                            android:id="@+id/CUName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#000000"
                            android:inputType="text|textEmailAddress"
                            android:gravity="center_vertical"
                            android:hint="Name:"
                            android:textColorHint="#000000"
                            android:padding="8dp"


                            />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardBackgroundColor="#FF5C6B72"
                        android:layout_below="@id/CUCardView"
                        android:id="@+id/CUphoneCV"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"

                        >
                        <EditText
                            android:id="@+id/CUEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#000000"
                            android:inputType="text|textEmailAddress"
                            android:gravity="center_vertical"
                            android:hint="Email Address:"
                            android:textColorHint="#000000"
                            android:padding="8dp"


                            />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardBackgroundColor="#FF5C6B72"
                        android:layout_below="@id/CUphoneCV"
                        android:id="@+id/CUEmailCV"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"

                        >
                        <EditText
                            android:id="@+id/CUPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#000000"
                            android:inputType="number"
                            android:gravity="center_vertical"
                            android:hint="Mobile Number:"
                            android:textColorHint="#000000"
                            android:padding="8dp"


                            />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardBackgroundColor="#FF5C6B72"
                        android:layout_below="@id/CUEmailCV"
                        android:id="@+id/CUQueryCV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        >
                        <EditText
                            android:id="@+id/CUQuery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@android:color/transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#000000"


                            android:hint="Your Query:"
                            android:textColorHint="#000000"
                            android:padding="8dp"
                            android:inputType="textMultiLine"


                            />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardBackgroundColor="#000000"

                        android:id="@+id/Bsign_up"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#FFBB88FF"
                        android:layout_below="@id/CUQueryCV"
                        android:layout_marginTop="10dp"
                        >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="Submit"
                            android:onClick="submitQuery"
                            android:id="@+id/butoon1"
                            android:textColor="#ffffff"

                            />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
