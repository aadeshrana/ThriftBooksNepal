<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="10dp"

    tools:context="com.example.thearbiter.thriftbooksnepal.Activities.SignUp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="30dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/createNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    android:text="Create A New Account"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="80dp"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <EditText
                        android:id="@+id/signUpFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Enter First Name"
                        android:inputType="text|textEmailAddress"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textColorHint="#7b7b7b" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVLastName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/CVFirstName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFBB88FF"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <EditText
                        android:id="@+id/signUpLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Enter Last Name"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textColorHint="#7b7b7b"


                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVUserName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/CVLastName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFBB88FF"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <EditText
                        android:id="@+id/signUpUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Enter Your Username"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textColorHint="#7b7b7b"


                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/CVUserName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFBB88FF"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <EditText
                        android:id="@+id/signUpPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Enter Your Password"
                        android:padding="8dp"
                        android:password="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textColorHint="#7b7b7b"


                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/CVPassword"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFBB88FF"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <EditText
                        android:id="@+id/signUpConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Confirm Your Password"
                        android:padding="8dp"
                        android:password="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textColorHint="#7b7b7b"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/CVConfirmPassword"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFBB88FF"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <EditText
                        android:id="@+id/signUpPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Enter Your Number"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textColorHint="#7b7b7b"

                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVemail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/CVPhoneNumber"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFBB88FF"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <EditText
                        android:id="@+id/signUpEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Enter Your Email Address"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textColorHint="#7b7b7b"


                        />
                </android.support.v7.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_below="@+id/CVemail"
    android:id="@+id/linearone"

    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"

    >
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CVSchool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFBB88FF"
        card_view:cardBackgroundColor="@android:color/transparent"
        android:layout_weight="30"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >

        <EditText
            android:id="@+id/signUpSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Enter Your School/College Name"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textColorHint="#7b7b7b"


            />

    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Find"
        android:id="@+id/button4"
        android:layout_weight="70"
        android:onClick="findSchools"


        />
</LinearLayout>



                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CVSignUpButton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/linearone"
                    android:layout_marginTop="10dp"
                    android:background="#FFBB88FF"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:paddingEnd="10dp">

                    <Button
                        android:id="@+id/butoon1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:onClick="signUpButton"
                        android:paddingBottom="10dp"
                        android:text="Sign Up"

                        />
                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
