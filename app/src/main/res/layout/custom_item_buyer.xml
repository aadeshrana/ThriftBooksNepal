<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardviewmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageOfBookForALevelBuyer"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/titleOfBookForALevelBuyer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageOfBookForALevelBuyer"
                android:layout_marginBottom="5dp"
                android:text="Title of Book"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/priceOfBookForALevelBuyer"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleOfBookForALevelBuyer"
                android:layout_marginBottom="5dp"
                android:text="Price"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nameOfSellerForBuyerCustomALevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/priceOfBookForALevelBuyer"
                android:text="Sellers name:"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>