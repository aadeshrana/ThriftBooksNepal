<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thearbiter.thriftbooksnepal.Activities.Login">

    <TextView
        android:id="@+id/nymberiaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="67dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="50sp"
        android:layout_above="@+id/CVLoginUsername"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CVLoginUsername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/CVLoginPassword"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#FFBB88FF"
        card_view:cardBackgroundColor="@android:color/transparent"


        >

        <EditText
            android:id="@+id/loginuUername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:enabled="true"
            android:hint="Username"
            android:inputType="text|textEmailAddress"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"

            android:textColorHint="#7b7b7b" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CVLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="#FFBB88FF"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="2dp">

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="Password"
            android:padding="8dp"
            android:password="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textColorHint="#7b7b7b"


            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CVLoginButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/CVLoginPassword"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="#FFBB88FF"
        card_view:cardBackgroundColor="@android:color/transparent"

        card_view:cardElevation="2dp">

        <Button
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:onClick="loginButton"
            android:text="Log In"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000000" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:text="No Account? Sign Up"
        android:id="@+id/LoginNewAccount"
        android:onClick="newAccount"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"


        >

    </Button>
</android.support.v7.widget.CardView>
</RelativeLayout>
